        "preinstall": "node -e \"const v=process.versions.node.split('.').map(Number); if (v[0]<20) { console.error('ERROR: Node >= 20 is required. You are using', process.version); process.exit(1); }\"",
        "verify:env": "node scripts/verify-env.js",
        "build": "tsc -b && vite build",
        "playwright:install": "npx playwright install --with-deps",
        "test:e2e": "npx playwright test",
        "vercel-build": "npm run build",
        "vercel:build": "npm run vercel-build",
        "lint": "eslint .",
        "preview": "vite preview",
        "start": "node server.cjs",
        "start:prod": "node server.cjs",
        "ci": "npm run verify:env && npm run build",
        "test": "echo 'Tests pending' && exit 0"
